        <StackLayout Padding="10">

            <Image Source="Inicio.jpg" WidthRequest="125" HeightRequest="125"/>

            <Entry x:Name= "txtCorreo"
                    Placeholder= "Correo"
                    TextColor= "#000"
                    PlaceholderColor= "#154360"></Entry>

            <Entry x:Name= "txtPass"
                    Placeholder= "ContraseÃ±a"
                    TextColor= "#000"
                    PlaceholderColor= "#154360"></Entry>

            <Button x:Name="bntLogin" 
                    Text="Ingresar" 
                    Margin="20"
                    WidthRequest="500"
                    BackgroundColor="AntiqueWhite"
                    TextColor="Black"
