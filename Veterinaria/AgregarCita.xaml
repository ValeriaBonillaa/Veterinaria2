<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinaria.AgregarCita"
             Title="AgregarCita">
    
    <VerticalStackLayout>
        <StackLayout Margin="50" HorizontalOptions="Fill">
            <Entry x:Name= "txtIdPersona"
                    Placeholder= "Id Persona"
                    TextColor= "#000"
                    PlaceholderColor= "#154360"></Entry>

            <Entry x:Name="txtFecha" 
                    Placeholder= "Fecha Cita"
                    TextColor= "#000"
                    PlaceholderColor= "#154360"></Entry> 

            <Button x:Name="bntAgregarCita" 
                    Text="Agregar Cita" 
                    Margin="20"
                    WidthRequest="200"
                    BackgroundColor="LightGreen"
                    TextColor="Black"
                    BorderColor="Black"
                    FontSize="Small"
                    Clicked="AgregarCita_Btn"
                    HorizontalOptions="Center"></Button>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>